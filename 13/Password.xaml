<Window x:Name="Windows" x:Class="_13.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_13"
        mc:Ignorable="d"
        Title="Авторизация" Height="139.566" Width="249.571" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Activated="Windows_Activated" BorderBrush="Black" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
    <Grid>
        <StackPanel >
            <PasswordBox x:Name="PasswordB" Height="24" BorderBrush="Black" SelectionBrush="Black" />
            <Separator Background="Black" ></Separator>
            <Button x:Name="Войти" Content="Войти" Height="31" IsDefault="True" Click="Войти_Click" Background="#FF294C89"  Foreground="White" BorderBrush="Black"/>
            <Separator Background="Black" ></Separator>
            <Button x:Name="Отмена" Content="Отмена" Height="31" IsCancel="True" Click="Отмена_Click" Background="#FF294C89"  Foreground="White" BorderBrush="Black"/>
            <Separator Background="Black" ></Separator>
        </StackPanel>

    </Grid>
</Window>
